<h2><%=@game.name%> Stock details</h2>

<br>
<section class="border">
<p>Title: <%=@game.name %></p>
<p>Publisher: <a href="/publisher/<%="#{@game.game_publisher.id}"%>"><%=@game.game_publisher.publisher %></a></p>
<p>Genre: <a href="/games/genre/<%="#{@game.genre}"%>"><%=@game.genre %></a></p>
<p>Description: <%=@game.description %></p>
<p>Stock: <%=@game.stock_quantity %></p>
<p>Stock Level:
<% if @game.is_stock_low == true && @game.is_stock_empty == false %>
  Stock is low
<% elsif @game.is_stock_low == true && @game.is_stock_empty == true %>
  Out of stock
<% else %>
  In Stock
<% end %></p>
<p>Buy Cost: £<%=@game.buy_cost %></p>
<p>Selling Price: £<%=@game.selling_price %></p>
<p>Markup: <%=@game.markup %>%</p>
<a class="button" href="/games/<%= @game.id %>/edit">Edit Stock</a>
<form action="/games/<%= @game.id %>/delete" method="post">
  <input class="button" type="submit" value="Remove Stock">
  <br>
</form>
</section>
